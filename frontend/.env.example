# NextAuth Configuration
AUTH_SECRET=generate_with_openssl_rand_base64_32
AUTH_URL=http://localhost:3000

# Microsoft Entra ID Configuration
AUTH_MICROSOFT_ENTRA_CLIENT_ID=your_client_id
AUTH_MICROSOFT_ENTRA_ID_SECRET=your_client_secret
AUTH_MICROSOFT_ENTRA_ID_TENANT_ID=your_tenant_id

# Auth configured flag
NEXT_PUBLIC_AUTH_CONFIGURED=true

# PostgreSQL Database Connection
# For local dev: use localhost:5432
# For Docker: use postgres:5432 (internal Docker network)
DATABASE_URL=postgresql://prioai_user:your_password@localhost:5432/prioai_db

# n8n Webhook URL for task creation
# For local dev: http://localhost:5678/webhook/prioai-tasks
# For production: http://YOUR_VPS_IP:5678/webhook/prioai-tasks
NEXT_PUBLIC_N8N_WEBHOOK_URL=http://localhost:5678/webhook/prioai-tasks

# AI Prioritization Service
# Internal Docker network URL
NEXT_PUBLIC_AI_SERVICE_URL=http://ai-prioritization:8000
# External URL for client-side calls
NEXT_PUBLIC_AI_SERVICE_EXTERNAL_URL=http://localhost:8000

# Frontend Base URL
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_N8N_INTEGRATION=true
NEXT_PUBLIC_ENABLE_AI_SERVICE=true

# Optional: Supabase (if using instead of direct PostgreSQL)
# NEXT_PUBLIC_SUPABASE_URL=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=
