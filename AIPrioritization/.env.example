# AI Prioritization Engine Configuration

# OpenAI Configuration (Required for AI-powered metric calculation)
OPENAI_API_KEY=your-openai-api-key-here

# NATS Configuration (Primary Event Stream)
NATS_HOST=localhost
NATS_PORT=4222
NATS_USERNAME=
NATS_PASSWORD=
NATS_TLS_ENABLED=false

# JetStream Configuration
JETSTREAM_ENABLED=true
JETSTREAM_DOMAIN=priority
JETSTREAM_MAX_MEMORY=256MB
JETSTREAM_MAX_STORAGE=1GB

# NATS Subjects
PRIORITY_REQUEST_SUBJECT=prioritization.request
PRIORITY_RESULT_SUBJECT=prioritization.result
PRIORITY_SYNC_SUBJECT=prioritization.sync

# Redis Configuration (Caching & Performance)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=10000
CACHE_ENABLED=true

# Legacy Redis Channels (Deprecated - for backward compatibility)
PRIORITIZATION_REQUEST_CHANNEL=prioritization_requests
PRIORITIZATION_RESULT_CHANNEL=prioritization_results
PRIORITIZE_CHANNEL=prioritize_events
RESULTS_CHANNEL=prioritize_results

# Service Configuration
SERVICE_NAME=ai-priority-engine
SERVICE_VERSION=2.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# AI Model Configuration
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=800
AI_CONFIDENCE_THRESHOLD=0.7

# Automatic Metric Calculation Settings
ENABLE_AUTO_METRICS=true
AUTO_METRICS_CONFIDENCE_THRESHOLD=0.8
FALLBACK_TO_MANUAL=true

# AI Engine Settings (Fallback values when auto-calculation fails)
DEFAULT_BUSINESS_VALUE=5
DEFAULT_RISK_LEVEL=5
DEFAULT_EFFORT_HOURS=4.0
DEFAULT_AFFECTED_USERS=10

# GDPR & Privacy Protection
ENABLE_PRIVACY_PROTECTION=true
ENABLE_SENSITIVE_DATA_DETECTION=true
LOCAL_PROCESSING_FALLBACK=true

# Priority Thresholds and Calculation Settings
MAX_PRIORITY_SCORE=10.0
DEFAULT_SLA_HOURS=24.0
ESCALATION_THRESHOLD=8.0
CRITICAL_THRESHOLD=8.5
HIGH_THRESHOLD=6.5
MEDIUM_THRESHOLD=4.0

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
